            android:label="RAMP">
			<!-- android:launchMode="singleInstance"-->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service
            android:name="RampLocalService"
            android:label="RAMP Local Service" >
            <intent-filter>
                <action android:name="it.unibo.deis.lia.ramp.android.RampLocalService" />
            </intent-filter>
        </service>
       <activity
            android:name=".service.application.OpportunisticNetworkingManagerActivity"
            android:label="ON Manager">
            <!-- android:launchMode="singleInstance"-->
        </activity>
        <activity
            android:name=".service.application.FileSharingServiceActivity"
            android:label="FS Service">
            <!-- android:launchMode="singleInstance"-->
        </activity>
        <activity
            android:name=".service.application.FileSharingClientActivity"
            android:label="FS Client">
            <!-- android:launchMode="singleInstance"-->
        </activity>
        <activity
            android:name=".service.application.ChatServiceActivity"
            android:label="Chat Service"
            android:screenOrientation="nosensor" >
            <!-- android:launchMode="singleInstance"-->
        </activity>
        <activity
            android:name=".service.application.ChatComunicationSupportActivity"
            android:label="Chat Client"
            android:screenOrientation="nosensor">
            <!--android:windowSoftInputMode="adjustPan" -->
            <!-- android:launchMode="singleInstance"-->
        </activity>
        <activity
            android:name=".service.application.ChatUserMoreInfoActivity">
           <!-- android:launchMode="singleInstance"-->
        </activity>
        <activity
            android:name=".service.application.ChatOpenActivity"
            android:label="Open Chat List" >
           <!-- android:launchMode="singleInstance"-->
        </activity>
        <activity
            android:name=".service.application.BroadcastClientActivity"
            android:label="Broadcast Client">
           <!-- android:launchMode="singleInstance"-->
        </activity>
    </application>

</manifest>