<?xml version="1.0" encoding="UTF-8"?>
<!--
1) find remote services 
2) select service
3) get file list
4) get file
5) send file
-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context=".service.application.FileSharingClientActivity" >

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <LinearLayout
            android:id="@+id/layout"
            android:name="RAMP File Sharing Client"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:label="RAMP File Sharing Client"
            android:orientation="vertical"
            android:paddingBottom="5px"
            android:paddingLeft="5px"
            android:paddingRight="5px"
            android:paddingTop="5px"
            android:scrollbars="vertical" >

            <TextView
                android:id="@+id/title"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="RAMP: File Sharing Client"
                android:textColor="#FF6600"
                android:textStyle="bold" />
           
            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/ttlTitle"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:text="TTL" />

                    <TextView
                        android:id="@+id/timeoutTitle"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:text="Timeout" />

                    <TextView
                        android:id="@+id/serviceAmountTitle"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:text="Service amount" />
                </TableRow>

                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal" >

                    <EditText
                        android:id="@+id/ttl"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:inputType="number"
                        android:numeric="integer"
                        android:singleLine="true"
                        android:text="3" />

                    <EditText
                        android:id="@+id/timeout"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:inputType="number"
                        android:numeric="integer"
                        android:singleLine="true"
                        android:text="2500" />

                    <EditText
                        android:id="@+id/serviceAmount"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:inputType="number"
                        android:numeric="integer"
                        android:singleLine="true"
                        android:text="1" />

                </TableRow>
            </TableLayout>
            
             <Button
                 android:id="@+id/discoverServices"
                 android:layout_width="fill_parent"
                 android:layout_height="fill_parent"
                 android:text="Find services" />

                    <Spinner
                        android:id="@+id/remoteServices"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:drawSelectorOnTop="true" />

                    <Button
                        android:id="@+id/getRemoteFileList"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:text="Get remote file list" />
                
                    <Spinner
                        android:id="@+id/remoteFilesSpinner"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:drawSelectorOnTop="true" />


         <TableLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:orientation="vertical" >
            
              <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                   android:orientation="horizontal" >

                    <Button
                        android:id="@+id/getRemoteFile"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:text="Get file" />
                    
                      <TableLayout
                        android:id="@+id/expiryRemoteTableLayout"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
             android:orientation="vertical" >
                   
                           <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                   android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/expiryRemoteFile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="expiry" />
                    
                  <EditText
                      android:id="@+id/expiryValueRemoteFile"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_weight="1"
                      android:inputType="number"
                      android:numeric="integer"
                      android:singleLine="true"
                      android:text="300" />

                  <TextView
                      android:id="@+id/expiryUmRemoteFile"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_weight="1"
                      android:text="seconds" />

                  </TableRow>
                      </TableLayout>
              </TableRow>

         </TableLayout>
         
            <TextView
                android:id="@+id/remoteFilesText"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="remote files:\n" />


                    <Button
                        android:id="@+id/getLocalFileList"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:text="Get local file list" />

                

                    <Spinner
                        android:id="@+id/localFilesSpinner"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent" />

                    <TableLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:orientation="vertical" >
            
              <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                   android:orientation="horizontal" >

                    <Button
                        android:id="@+id/sendLocalFile"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:text="Send file" />
                    
                      <TableLayout
                        android:id="@+id/expiryLocalTableLayout"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
             android:orientation="vertical" >
                   
                           <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                   android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/expiryLocalFile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="expiry" />
                    
                  <EditText
                      android:id="@+id/expiryValueLocalFile"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_weight="1"
                      android:inputType="number"
                      android:numeric="integer"
                      android:singleLine="true"
                      android:text="300" />

                  <TextView
                      android:id="@+id/expiryUmLocalFile"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_weight="1"
                      android:text="seconds" />

                  </TableRow>
                      </TableLayout>
              </TableRow>

         </TableLayout>
         
            <TextView
                android:id="@+id/localFilesText"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="local files:\n" />

            <Button
                android:id="@+id/backToManager"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:drawSelectorOnTop="true"
                android:text="back to manager" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>